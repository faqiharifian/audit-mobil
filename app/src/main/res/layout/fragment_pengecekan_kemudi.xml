<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/colorGrey"
    tools:context="com.digitcreativestudio.auditmobil.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_kemudi"
            style="@style/title_header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/itemCekStyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_kemudi_1"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_ket"
                style="@style/editTextStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/itemCekStyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_kemudi_2"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_ket"
                style="@style/editTextStyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="10dp"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/text_lanjut"
                android:src="@drawable/ic_back_white"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_circle"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>
                <ImageView
                    android:layout_margin="1dp"
                    android:layout_width="@dimen/dot_width"
                    android:layout_height="@dimen/dot_height"
                    android:src="@drawable/ic_dot"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/lanjut_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/text_lanjut"
                android:src="@drawable/ic_next_white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
